mixin swiper-price()
  -
    const slides = [
      {
        cr: "50",
        dollar: "5",
      },
      {
        cr: "150",
        dollar: "15",
      },
      {
        cr: "300",
        dollar: "30",
      },
      {
        cr: "500",
        dollar: "50",
      },
      {
        cr: "1000",
        dollar: "100",
      },
      {
        cr: "1000",
        dollar: "100",
      },
    ]
  form.swiper-price.swiper(action="https://echo.htmlacademy.ru/", method="get", data-swiper-price)
    +discount()
    .swiper-wrapper
      each slide in slides
        .swiper-slide
          article
            h2.swiper-price__offer One&nbsp;time&nbsp;offer!
            .swiper-price__price
              .swiper-price__cr
                span.swiper-price__num!= slide.cr
                span.swiper-price__cr-ico CR
              span.swiper-price__slash /
              .swiper-price__dollar
                span.swiper-price__num $
                span.swiper-price__num!= slide.dollar
            button.swiper-price__btn-buy.btn Buy now
    .swiper-pagination
    button.swiper-price__btn-try.btn Try now
    label.swiper-price__checkbox
      input(type="checkbox", name="agree", checked)
      span By clicking Checkbox you agree and accept our #[a(href="#") Privacy Policy], and #[a(href="#") Terms of use]
